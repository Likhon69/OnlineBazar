@model ProductType;
@{
    ViewData["Title"] = "Create";
}
<br/>
<form asp-action="Create" method="post">
   <div class="p-4 rounded border">
       <div asp-validation-summary="ModelOnly" class="text-danger">

       </div>
       <div class="form-group row">
           <div class="col-md-2">
               <label asp-for="ProductTypeName"></label>
           </div>
           <div class="col-md-5">
               <input asp-for="ProductTypeName" class="form-control" />
           </div>
           <span asp-validation-for="ProductTypeName" class="text-danger"></span>
       </div>
       <div class="form-group">
           <input type="submit" value="Save" class="btn btn-primary" />
           <a asp-action="Index" class="btn btn-success">Back To List</a>
       </div>
   </div>
</form>
@section Scripts{ 
    @{ await Html.RenderPartialAsync(partialViewName: "_ValidationScriptsPartial.cshtml");}
}


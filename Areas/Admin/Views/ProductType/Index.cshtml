@model IEnumerable<ProductType>;
@{
    ViewData["Title"] = "Index";
}
<br/><br/>
<div class="row">
    <div class="col-md-6">
        <h2 class="text-info">Product Type List</h2>
    </div> 
    <div class="col-md-6 text-right">
        <a asp-action="Create" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp;Add New Product</a>
    </div>
</div>
<br/>
<div>
    <table class="table table-bordered table-striped">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(c=>c.ProductTypeName)
            </th>
            <th></th>
            <th></th>
        </tr>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.ProductTypeName</td>
                <td><partial name="_ButttonforPartial" model="@item.Id" /></td>
            </tr>
        }
    </table>
</div>


@model IEnumerable<Products>;
@{
    ViewData["Title"] = "Index";
}

<br /><br />
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Products List</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp;Add New Product</a>
    </div>
</div>
<form method="post">
    <div class="row">
        <div class="col-3">
            <input type="number" class="form-control" name="Lowamount" />
        </div>
        <div class="col-3">
            <input type="number" class="form-control" name="Largeamount" />
        </div>
        <div class="col-3">
            <input type="submit" class="btn btn-success" value="Search" />
        </div>
    </div>
</form>
<br />
<div>
    <table class="table table-bordered table-striped" id="myTable">
        <thead>
            <tr class="table-info">
                <th>
                    @Html.DisplayNameFor(c => c.ProductName)
                </th>
                <th>
                    @Html.DisplayNameFor(c => c.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(c => c.ProductColor)
                </th>
                <th>
                    @Html.DisplayNameFor(c => c.IsAvailabe)
                </th>
                <th>
                    @Html.DisplayNameFor(c => c.ProductType.ProductTypeName)
                </th>
                <th>
                    @Html.DisplayNameFor(c => c.SpecialTag.SpecialTagName)
                </th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Price</td>
                    <td>@item.ProductColor</td>
                    <td>@item.IsAvailabe</td>
                    <td>@item.ProductType.ProductTypeName</td>
                    <td>@item.SpecialTag.SpecialTagName</td>
                    <td><partial name="_ButtonForProductPartial" model="@item.Id" /></td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts{

    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.12.0/build/alertify.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#myTable').DataTable({
                dom: 'Bfrtip',
                buttons: [
                    'copy', 'csv', 'excel', 'pdf', 'print'
                ]
            });
        });
    </script>
}


@model Products;
@{
    ViewData["Title"] = "Edit";
}

<br />
<h2 class="text-info">Add New Products</h2>
<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border">
        <div class="form-group row">
            <div class="col-md-2">
                <label asp-for="ProductType"></label>
            </div>
            <div class="col-md-5">
                <select asp-for="ProductTypeId" asp-items="@ViewBag.ProSelect" class="form-control"></select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2">
                <label asp-for="SpecialTag"></label>
            </div>
            <div class="col-md-5">
                <select asp-for="SpecialTagId" asp-items="@ViewBag.ProTagSelect" class="form-control"></select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2">
                <label asp-for="ProductName"></label>
            </div>
            <div class="col-md-5">
                <input asp-for="ProductName" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2">
                <label asp-for="Image"></label>
            </div>
            <div class="col-md-5">
                <input asp-for="Image" class="form-control" type="file" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2">
                <label asp-for="Price"></label>
            </div>
            <div class="col-md-5">
                <input asp-for="Price" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2">
                <label asp-for="ProductColor"></label>
            </div>
            <div class="col-md-5">
                <input asp-for="ProductColor" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2">
                <label asp-for="IsAvailabe"></label>
            </div>
            <div class="col-md-5">
                <input asp-for="ProductName" type="checkbox" />
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-success" />
            <a asp-action="Index" class="btn btn-info">Back To List</a>
        </div>
    </div>
</form>
@section Scripts{
    @{ await Html.RenderPartialAsync(partialViewName: "_ValidationScriptsPartial.cshtml");}
}



